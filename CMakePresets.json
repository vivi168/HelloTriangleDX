{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20
  },
  "configurePresets": [
    {
      "name": "Ninja Base",
      "generator": "Ninja",
      "cacheVariables": {
        "BC_USE_OPENMP": "OFF",
        "BUILD_DX11": "OFF",
        "BUILD_SAMPLE": "OFF",
        "BUILD_TOOLS": "OFF"
      },
      "hidden": true
    },
    {
      "name": "MSVC Base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "hidden": true
    },
    {
      "name": "Clang Base",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      },
      "hidden": true
    },
    {
      "name": "Release",
      "displayName": "Release (Ninja)",
      "binaryDir": "${sourceDir}/Release",
      "inherits": ["Ninja Base", "MSVC Base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug (Ninja)",
      "binaryDir": "${sourceDir}/Debug",
      "inherits": ["Ninja Base", "MSVC Base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release-Clang",
      "displayName": "Release-Clang (Ninja)",
      "binaryDir": "${sourceDir}/Release-Clang",
      "inherits": ["Ninja Base", "Clang Base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug-Clang",
      "displayName": "Debug-Clang (Ninja)",
      "binaryDir": "${sourceDir}/Debug-Clang",
      "inherits": ["Ninja Base", "Clang Base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Visual Studio",
      "displayName": "Visual Studio",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build",
      "architecture": "x64",
      "cacheVariables": {
        "BC_USE_OPENMP": "OFF",
        "BUILD_DX11": "OFF",
        "BUILD_SAMPLE": "OFF",
        "BUILD_TOOLS": "OFF",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_VS_DEBUGGER_WORKING_DIRECTORY": "${sourceDir}"
      }
    }
  ]
}
